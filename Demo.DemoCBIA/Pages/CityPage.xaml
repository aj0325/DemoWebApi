<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
             x:Class="Demo.DemoCBIA.Pages.CityPage"
             Title="City Resources">
    <StackLayout>

        <dxco:DXButton Content = "Open City Handbook" 
           Icon = "pdf.png" 
           BorderThickness="2"
           
           TextColor="Black"
           
           IconColor="Black"
          
           CornerRadius="10"
           BackgroundColor="Gray"
           Clicked = "HandbookButton_Clicked"/>

        <dxco:DXButton Content = "View Map" 
                   Icon = "map.png" 
                   BorderThickness="2"
                   BackgroundColor="Gray"
                   TextColor="Black"
                   
                   IconColor="Black"
                  
                   CornerRadius="10"
                   Clicked = "MapButton_Clicked"/>


    </StackLayout>
</ContentPage>